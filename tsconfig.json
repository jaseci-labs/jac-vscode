{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "lib": [
            "ES2019"
        ],
        "rootDir": "src",
        "outDir": "out",
        "sourceMap": true,
        "types": ["node", "vscode", "jest"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strict": false
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
